<section id="home" class="relative pt-32 pb-20 min-h-screen flex items-center overflow-hidden">
  <!-- Animated Background -->
  <div class="absolute inset-0 bg-gradient-to-br from-pink-50 via-purple-50 to-cyan-50 animate-gradient"></div>

  <!-- Floating Blob Shapes -->
  <div class="absolute top-20 left-10 w-64 h-64 bg-[var(--color-primary)] opacity-20 rounded-full blur-3xl animate-blob"></div>
  <div class="absolute top-40 right-20 w-96 h-96 bg-[var(--color-secondary)] opacity-20 rounded-full blur-3xl animate-blob" style="animation-delay: 2s;"></div>
  <div class="absolute bottom-20 left-1/3 w-72 h-72 bg-[var(--color-accent)] opacity-20 rounded-full blur-3xl animate-blob" style="animation-delay: 4s;"></div>
  <div class="absolute bottom-40 right-1/4 w-80 h-80 bg-[var(--color-purple)] opacity-15 rounded-full blur-3xl animate-blob" style="animation-delay: 6s;"></div>

  <div class="container mx-auto px-4 sm:px-6 relative z-10">
    <div class="grid lg:grid-cols-2 gap-12 lg:gap-16 items-center">
      <!-- Left: Text Content -->
      <div class="space-y-8 text-center lg:text-left">
        <!-- Badge -->
        <div class="inline-flex items-center gap-2 px-4 py-2 bg-white/80 backdrop-blur-sm rounded-full shadow-lg animate-fade-in-up opacity-0">
          <span class="w-2 h-2 bg-green-500 rounded-full animate-pulse"></span>
          <span class="text-sm font-medium text-gray-700">25+ Jahre Erfahrung</span>
        </div>

        <!-- Main Headline -->
        <h1 class="text-5xl sm:text-6xl lg:text-7xl font-bold font-display leading-tight opacity-0 animate-fade-in-up delay-100">
          <span class="inline-block">Sabines</span>
          <br />
          <span class="relative inline-block">
            <span class="text-[var(--color-primary)]">Kinder</span><span class="text-[var(--color-secondary)]">schminken</span>
            <svg class="absolute -bottom-2 left-0 w-full h-4" viewBox="0 0 300 12" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M2 8C52 3 102 2 152 5C202 8 252 4 298 7" stroke="#ffe66d" stroke-width="6" stroke-linecap="round"/>
            </svg>
          </span>
        </h1>

        <p class="text-xl sm:text-2xl text-gray-700 leading-relaxed max-w-xl mx-auto lg:mx-0 opacity-0 animate-fade-in-up delay-200">
          Verwandle dein Event in ein <span class="font-bold text-[var(--color-primary)]">magisches Erlebnis</span> mit professionellem Kinderschminken & kreativer Ballonkunst!
        </p>

        <!-- CTA Buttons -->
        <div class="flex flex-col sm:flex-row gap-4 justify-center lg:justify-start opacity-0 animate-fade-in-up delay-300">
          <a
            href="#kontakt"
            class="group px-8 py-4 bg-gradient-to-r from-[var(--color-primary)] to-[var(--color-secondary)] text-white font-bold rounded-full shadow-colorful hover:shadow-colorful-lg transition-all duration-300 hover:scale-105 cursor-fancy text-center relative overflow-hidden"
          >
            <span class="relative z-10">Jetzt anfragen</span>
            <div class="absolute inset-0 bg-gradient-to-r from-[var(--color-secondary)] to-[var(--color-primary)] opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
          </a>
          <a
            href="#leistungen"
            class="group px-8 py-4 bg-white text-gray-900 font-bold rounded-full shadow-lg hover:shadow-xl transition-all duration-300 hover:scale-105 border-2 border-gray-200 hover:border-[var(--color-secondary)] text-center"
          >
            <span class="group-hover:text-[var(--color-secondary)] transition-colors">Unsere Leistungen</span>
          </a>
        </div>

        <!-- Stats -->
        <div class="grid grid-cols-3 gap-6 pt-8 opacity-0 animate-fade-in-up delay-400">
          <div class="text-center lg:text-left">
            <div class="text-4xl sm:text-5xl font-bold font-display text-[var(--color-primary)] mb-1">25+</div>
            <div class="text-sm sm:text-base text-gray-600 font-medium">Jahre Erfahrung</div>
          </div>
          <div class="text-center lg:text-left">
            <div class="text-4xl sm:text-5xl font-bold font-display text-[var(--color-secondary)] mb-1">500+</div>
            <div class="text-sm sm:text-base text-gray-600 font-medium">Events/Jahr</div>
          </div>
          <div class="text-center lg:text-left">
            <div class="text-4xl sm:text-5xl font-bold font-display text-[var(--color-accent-dark)] mb-1">10k+</div>
            <div class="text-sm sm:text-base text-gray-600 font-medium">GlÃ¼ckliche Kinder</div>
          </div>
        </div>
      </div>

      <!-- Right: Image with Creative Layout -->
      <div class="relative opacity-0 animate-fade-in-up delay-500">
        <!-- Main Image Container -->
        <div class="relative z-10 mx-auto max-w-lg lg:max-w-none">
          <!-- Primary Image -->
          <div class="relative rounded-[3rem] overflow-hidden shadow-colorful-lg transform hover:scale-105 transition-all duration-500 animate-float">
            <img
              src="/images/gallery/kinderschminken_beispiel_1.jpg"
              alt="Kinderschminken Beispiel"
              class="w-full h-auto object-cover"
            />
            <!-- Gradient Overlay -->
            <div class="absolute inset-0 bg-gradient-to-t from-[var(--color-primary)]/20 to-transparent pointer-events-none"></div>
          </div>

          <!-- Floating Decoration Badge 1 -->
          <div class="absolute -top-8 -right-8 w-32 h-32 bg-gradient-to-br from-[var(--color-accent)] to-[var(--color-orange)] rounded-3xl shadow-xl flex flex-col items-center justify-center transform rotate-12 hover:rotate-0 transition-all duration-300 animate-float-delayed hidden sm:flex">
            <span class="text-3xl mb-1">â­</span>
            <span class="text-xs font-bold text-gray-800">Top</span>
            <span class="text-xs font-bold text-gray-800">Rated</span>
          </div>

          <!-- Floating Decoration Badge 2 -->
          <div class="absolute -bottom-6 -left-6 w-28 h-28 bg-white rounded-3xl shadow-xl flex flex-col items-center justify-center transform -rotate-6 hover:rotate-0 transition-all duration-300 animate-float hidden sm:flex">
            <span class="text-3xl mb-1">ğŸ¨</span>
            <span class="text-xs font-bold text-[var(--color-primary)]">100%</span>
            <span class="text-xs font-bold text-gray-600">Kreativ</span>
          </div>
        </div>

        <!-- Decorative Background Elements -->
        <div class="absolute -z-10 top-12 right-12 w-72 h-72 bg-gradient-to-br from-[var(--color-secondary)]/30 to-[var(--color-primary)]/30 blob-shape blur-2xl animate-blob"></div>
        <div class="absolute -z-10 -bottom-12 -left-12 w-80 h-80 bg-gradient-to-tr from-[var(--color-accent)]/30 to-[var(--color-purple)]/30 blob-shape blur-2xl animate-blob" style="animation-delay: 3s;"></div>

        <!-- Floating Emojis -->
        <div class="absolute top-1/4 -left-12 text-4xl animate-float hidden lg:block">ğŸˆ</div>
        <div class="absolute top-1/3 -right-16 text-5xl animate-float-delayed hidden lg:block">âœ¨</div>
        <div class="absolute bottom-1/4 -left-16 text-4xl animate-float hidden lg:block" style="animation-delay: 1s;">ğŸ¦‹</div>
        <div class="absolute bottom-1/3 -right-12 text-3xl animate-float-delayed hidden lg:block" style="animation-delay: 2s;">ğŸŒŸ</div>
      </div>
    </div>
  </div>

  <!-- Scroll Indicator -->
  <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 opacity-0 animate-fade-in-up delay-600">
    <a href="#leistungen" class="flex flex-col items-center gap-2 text-gray-600 hover:text-[var(--color-primary)] transition-colors group">
      <span class="text-sm font-medium">Scroll</span>
      <svg class="w-6 h-6 animate-bounce" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
      </svg>
    </a>
  </div>
</section>
